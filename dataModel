-- Tabela de Usuários
CREATE TABLE User (
  id INT AUTO_INCREMENT PRIMARY KEY,
  name VARCHAR(100) NOT NULL,
  email VARCHAR(100) UNIQUE NOT NULL,
  password VARCHAR(255) NOT NULL,
  role ENUM('Admin', 'Reader') DEFAULT 'Reader',
  createdAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  updatedAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP
);

-- Tabela de Estações Meteorológicas
CREATE TABLE Station (
  id INT AUTO_INCREMENT PRIMARY KEY,
  name VARCHAR(100) NOT NULL,
  location VARCHAR(255),
  latitude FLOAT NOT NULL,
  longitude FLOAT NOT NULL,
  status ENUM('Ativa', 'Inativa') DEFAULT 'Ativa',
  createdAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  updatedAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP
);

-- Tabela de Tipos de Parâmetro
CREATE TABLE TypeParameter (
  id INT AUTO_INCREMENT PRIMARY KEY,
  name VARCHAR(100) NOT NULL,
  unit VARCHAR(20) NOT NULL,
  createdAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  updatedAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP
);

-- Tabela de Parâmetros
CREATE TABLE Parameter (
  id INT AUTO_INCREMENT PRIMARY KEY,
  stationId INT,
  typeParameterId INT,
  factor FLOAT NOT NULL,
  offset FLOAT NOT NULL,
  valMin FLOAT NOT NULL,
  valMax FLOAT NOT NULL,
  createdAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  updatedAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
  FOREIGN KEY (stationId) REFERENCES Station(id),
  FOREIGN KEY (typeParameterId) REFERENCES TypeParameter(id)
);

-- Tabela de Condições Meteorológicas (Leituras)
CREATE TABLE Miditions (
  id INT AUTO_INCREMENT PRIMARY KEY,
  stationId INT,
  typeParameterId INT,
  value FLOAT NOT NULL,
  timestamp DATETIME NOT NULL,
  createdAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  updatedAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
  FOREIGN KEY (stationId) REFERENCES Station(id),
  FOREIGN KEY (typeParameterId) REFERENCES TypeParameter(id)
);

-- Tabela de Ocorrências (Alertas)
CREATE TABLE Occurrence (
  id INT AUTO_INCREMENT PRIMARY KEY,
  stationId INT,
  typeParameterId INT,
  parameterId INT,
  miditionId INT,
  alertMessage VARCHAR(255) NOT NULL,
  timestamp DATETIME NOT NULL,
  createdAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  updatedAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
  FOREIGN KEY (stationId) REFERENCES Station(id),
  FOREIGN KEY (typeParameterId) REFERENCES TypeParameter(id),
  FOREIGN KEY (parameterId) REFERENCES Parameter(id),
  FOREIGN KEY (miditionId) REFERENCES Miditions(id)
);

-- Tabela de Notificações
CREATE TABLE Notification (
  id INT AUTO_INCREMENT PRIMARY KEY,
  occurrenceId INT NOT NULL,
  typeParameterId INT NOT NULL,
  notificationDate DATETIME NOT NULL,
  description VARCHAR(255),
  FOREIGN KEY (occurrenceId) REFERENCES Occurrence(id),
  FOREIGN KEY (typeParameterId) REFERENCES TypeParameter(id)
);
